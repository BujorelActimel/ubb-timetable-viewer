{
  "manifest_version": 3,
  "name": "UBB Timetable Viewer",
  "version": "2.0.0",
  "description": "Build a personal timetable from UBB course schedules",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["*://*.cs.ubbcluj.ro/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
